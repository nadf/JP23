# baza mjesta
# odaberite sva mjesta iz osjecko-baranjske zupanije
select * from mjesto;
select * from mjesto where zupanija=14;

# odaberite sva mjesta u hrvatskoj koja ne zavrsavaju sa slovom k
select * from mjesto where naziv not like '%k';

