drop database if exists vjezba1;
create database vjezba1 CHARACTER SET utf8;

use vjezba1;

create table vjezba1(
		sifra int not null primary key auto_increment,
		naziv varchar(50) not null,
		cijena decimal(18,2),
		lokacija varchar(50)
	);
	
insert into vjezba1 (sifra,naziv,cijena,lokacija)
values (null,'naziv1',10.99,'lokacija1'),
		(null,'naziv2',11.99,'lokacija2'),
		(null,'naziv3',12.99,'lokacija3'),
		(null,'naziv4',13.99,'lokacija4'),
		(null,'naziv5',14.99,'lokacija5');
